{
  "name": "@team-choco/xiv",
  "version": "0.1.0",
  "description": "A collection of Final Fantasy XIV APIs used by @team-choco!",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-choco/xiv.git"
  },
  "contributors": [
    "Nick Woodward <nick@salte.io>"
  ],
  "bugs": {
    "url": "https://github.com/team-choco/xiv/issues"
  },
  "homepage": "https://github.com/team-choco/xiv",
  "source": "src/index.ts",
  "main": "dist/xiv.js",
  "module": "dist/xiv.module.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@team-choco/shell-platform": "^0.1.6",
    "@types/chance": "^1.1.0",
    "@types/cheerio": "^0.22.18",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.3",
    "@types/node": "^12.12.47",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "chance": "^1.1.6",
    "eslint": "^7.3.1",
    "eslint-plugin-tsdoc": "^0.2.5",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "microbundle": "^0.12.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "build": "microbundle --target node -f es,cjs",
    "validate": "run-p test:coverage test:integration lint",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:tdd": "jest --watch",
    "lint": "eslint --ignore-path .gitignore src/**/*.ts",
    "lint:fix": "eslint --ignore-path .gitignore --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add --force"
    ],
    "*.json": [
      "git add --force"
    ]
  }
}
